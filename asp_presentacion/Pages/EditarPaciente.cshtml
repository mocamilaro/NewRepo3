@page
@model asp_presentacion.Pages.EditarPacienteModel
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actualizar Datos</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            background-color: #f5f5f5;
            padding: 0;
            margin: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
            background-color: white;
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
        }

        .header {
            display: flex;
            align-items: center;
            padding: 15px;
            background-color: #ffffff;
            border-bottom: 1px solid #f0f0f0;
            position: sticky;
            top: 0;
        }

        .back-button {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #0099cc;
            text-decoration: none;
            font-size: 24px;
            width: 24px;
            height: 24px;
        }

        .title-container {
            background-color: #f5f5f5;
            padding: 15px;
            border-radius: 12px;
            margin: 15px;
        }

        .title {
            color: #2b5876;
            font-size: 20px;
            font-weight: 500;
        }

        .form-section {
            padding: 10px 15px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-size: 14px;
            color: #0099cc;
            margin-bottom: 8px;
            display: block;
        }

        .form-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #0099cc;
            border-radius: 8px;
            font-size: 16px;
            outline: none;
        }

            .form-input:focus {
                border-color: #0077aa;
            }

        .submit-btn {
            background-color: #17ced4;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px;
            width: 100px;
            font-size: 16px;
            cursor: pointer;
            margin: 10px auto 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .submit-btn:hover {
                background-color: #14b6bb;
            }

        .message {
            padding: 10px;
            border-radius: 8px;
            margin: 0 15px 15px;
            font-size: 14px;
            text-align: center;
        }

        .success-message {
            background-color: #d4edda;
            color: #155724;
        }

        .error-message {
            background-color: #f8d7da;
            color: #721c24;
        }

        .footer {
            display: flex;
            justify-content: space-around;
            padding: 15px 0;
            background-color: #f5f5f5;
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
        }

        .footer-icon {
            font-size: 20px;
            color: black;
            width: 33.33%;
            text-align: center;
        }

        .text-danger {
            color: #dc3545;
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }

        .form-button-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="javascript:history.back();" class="back-button">←</a>
        </div>

        <div class="title-container">
            <h1 class="title">Actualizar datos</h1>
        </div>

        <form method="post" class="form-section">
            <input type="hidden" asp-for="PacienteEditable.Id" />
            <input type="hidden" asp-for="PacienteEditable.Cedula" />

            <label class="form-label" asp-for="PacienteEditable.Nombre">Nombre</label>
            <input type="text" class="form-input" asp-for="PacienteEditable.Nombre" placeholder="Ingrese su nombre completo" required>
            <span asp-validation-for="PacienteEditable.Nombre" class="text-danger"></span>

            <label class="form-label" asp-for="PacienteEditable.Telefono">Teléfono</label>
            <input type="tel" class="form-input" asp-for="PacienteEditable.Telefono" placeholder="Ingrese su número de teléfono" required>
            <span asp-validation-for="PacienteEditable.Telefono" class="text-danger"></span>

            <label class="form-label" asp-for="PacienteEditable.TipoSang">Tipo de sangre</label>
            <input type="text" class="form-input" asp-for="PacienteEditable.TipoSang" placeholder="Ej: O+, A-, B+">
            <span asp-validation-for="PacienteEditable.TipoSang" class="text-danger"></span>

            <label class="form-label" asp-for="PacienteEditable.Email">Email</label>
            <input type="email" class="form-input" asp-for="PacienteEditable.Email" placeholder="correo@ejemplo.com">
            <span asp-validation-for="PacienteEditable.Email" class="text-danger"></span>

            <label class="form-label" asp-for="PacienteEditable.Acudiente">Acudiente</label>
            <input type="text" class="form-input" asp-for="PacienteEditable.Acudiente" placeholder="Nombre del acudiente">
            <span asp-validation-for="PacienteEditable.Acudiente" class="text-danger"></span>

            <label class="form-label" asp-for="PacienteEditable.eps">EPS</label>
            <input type="text" class="form-input" asp-for="PacienteEditable.eps" placeholder="Entidad promotora de salud">
            <span asp-validation-for="PacienteEditable.eps" class="text-danger"></span>

            <button type="submit" class="submit-btn">
                <span>✓</span>
            </button>
        </form>
    </div>

    <div class="footer">
        <div class="footer-icon">⊞</div>
        <div class="footer-icon">🔔</div>
        <div class="footer-icon">⚙</div>
    </div>
</body>
</html>